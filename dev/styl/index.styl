@import 'nib'
@import 'colores'
@import 'normalize'

*
  box-sizing border-box

body
  font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  margin 0
  text-align center

@keyframes bg
  0%
    background-position 0 0
  50%
    background-position 100% 100%
  100%
    background-position 0 0

.menu
  animation bg 120s linear infinite
  background url(http://francoescamillaoficial.com/assets/img/backgrounds/bg-4.jpg) no-repeat center center
  background-size 150%
  height 100vh
  position fixed
  width 100vw
  
  &:hover
  &.show
    
    .contenedorIconoMenu
      height 100px
      width 100px

      .iconoMenu
        opacity 1

        .linea
          height calc(50vh - 3rem)
          opacity 1

        .punto
          transition transform .2s linear 0s

          &.superior
            transform translate(-50%, calc(-50% - 20px))

          &.inferior
            transform translate(-50%, calc(50% + 10px))
    
    nav
      ul
        li
          opacity 1
          transform translateY(0)

  .capa
    background rgba(11, 13, 19, 0.9)
    height 100vh
    position relative
    width 100vw

  .contenedorIconoMenu
      height 50px
      left 50%
      position absolute
      top 50%
      transform translate(-50%, -50%)
      transition height .25s ease-in-out, width .25s ease-in-out
      width 50px
  
    .iconoMenu
      border 2px solid white
      border-radius 50%
      height 100%
      opacity 0
      transition opacity .15s linear
      width 100%
    
      .punto
        background white
        border-radius 50%
        height 10px
        left 50%
        position absolute
        top 50%
        transform translate(-50%, -50%)
        transition transform .2s linear .2s
        width 10px
        
        &.superior  
          transform translate(-50%, 0)
          
        &.centro
          transform translate(-50%, -50%)
          
        &.inferior
          transform translate(-50%, 0)
      
      .linea
        background white
        bottom 50%
        height calc(1vh)
        left 50%
        opacity 0
        position absolute
        transform translate(-50%, -20px)
        transition height .5s cubic-bezier(.54, .66, .1, .99) .2s, opacity 0s linear .2s
        width 3px
        
        &.superior
          border-radius 100% 0 0 0
          bottom 50%
          transform translate(-50%, -20px)
          
        &.inferior
          border-radius 0 0 100%
          top 50%
          transform translate(-50%, 20px)
    
    nav
      color white
      font-size 1.75rem
      left calc(50% + 66px)
      position absolute
      text-align left
      top 50%
      transform translate(0, -50%)

      ul
        list-style none
        margin 0
        padding 0

        li
          opacity 0
          transform translateY(100%)
          transition-property opacity, transform
          transition-duration .25s, .5s
          transition-timing-function linear, cubic-bezier(0.09, 0.49, 0.28, 1.13)

          &:nth-child(1)
            transition-delay 0s
            
          &:nth-child(2)
            transition-delay .1s
            
          &:nth-child(3)
            transition-delay .15s
            
          &:nth-child(4)
            transition-delay .20s
            
          &:nth-child(5)
            transition-delay .25s
            
          &:nth-child(6)
            transition-delay .30s
            
          &:nth-child(7)
            transition-delay .35s

          a
            color inherit
            display block
            margin 0 0 0 3rem
            padding 0 0 0 3.25rem
            position relative
            text-decoration none
            text-transform uppercase
            
            &:hover
              color #fbda00
              
            &:hover:before
              opacity 1
              
            &:before
              background url(https://i.pinimg.com/originals/3f/eb/ee/3febeee74dc583e7cba62ebdfa82dc6c.gif) no-repeat center center
              content ''
              display block
              height 108px
              left 50%
              opacity 0
              position absolute
              top 50%
              transform translate(-50%, -50%)
              width 268px
          
            img
              left 0
              position absolute
              
        li:not(:last-child)
          margin 0 0 4rem 0

    .descripcionSecciones
      padding 0
      position absolute
      right calc(50% + 66px)
      top 50%
      transform translate(0, -50%)
      width calc(50% - 104px)

      img
        width 100%
        

