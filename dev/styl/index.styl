@import 'nib'
@import 'colores'
@import 'normalize'

*
  box-sizing border-box

body
  font-family 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  margin 0
  text-align center

.menu
  background url(http://francoescamillaoficial.com/assets/img/backgrounds/bg-4.jpg) no-repeat center center
  background-size 100%
  height 100vh
  position fixed
  width 100vw

  .capa
    background rgba(11, 13, 19, 0.9)
    height 100vh
    position relative
    width 100vw

  .contenedorIconoMenu
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      height 100px
      width 100px
  
    .iconoMenu
      border 2px solid white
      border-radius 50%
      height 100%
      width 100%
    
      .punto
        background white
        border-radius 50%
        height 10px
        left 50%
        position absolute
        top 50%
        transform translate(-50%, -50%)
        width 10px
        &.superior  
          transform translate(-50%, calc(-50% - 20px))
        &.centro
          transform translate(-50%, -50%)
        &.inferior
          transform translate(-50%, calc(50% + 10px))
      
      .linea
        background white
        bottom 50%
        height calc(50vh - 3rem)
        left 50%
        position absolute
        transform translate(-50%, -20px)
        width 3px
        &.superior
          border-radius 100% 0 0 0
          bottom 50%
          transform translate(-50%, -20px)
        &.inferior
          border-radius 0 0 100%
          top 50%
          transform translate(-50%, 20px)
    
    nav
      color white
      font-size 1.75rem
      left calc(50% + 66px)
      position absolute
      text-align left
      top 50%
      transform translate(0, -50%)

      ul
        list-style none
        margin 0
        padding 0

        a
          color inherit
          display block
          margin 0 0 0 3rem
          padding 0 0 0 3.25rem
          position relative
          text-decoration none
          text-transform uppercase
          &:hover
            color #fbda00
          &:hover:before
            opacity 1
          &:before
            background url(https://i.pinimg.com/originals/3f/eb/ee/3febeee74dc583e7cba62ebdfa82dc6c.gif) no-repeat center center
            content ''
            display block
            height 108px
            left 50%
            opacity 0
            position absolute
            top 50%
            transform translate(-50%, -50%)
            width 268px
          
          img
            left 0
            position absolute
              
        li:not(:last-child)
          margin 0 0 2rem 0

    .descripcionSecciones
      padding 0
      position absolute
      right calc(50% + 66px)
      top 50%
      transform translate(0, -50%)
      width calc(50% - 104px)

      img
        width 100%
        

